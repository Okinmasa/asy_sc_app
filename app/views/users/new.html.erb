<%= provide(:title, 'ユーザー登録') %>
<h1>ユーザー登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      <%= f.label :email, "メール" %>
      <%= f.text_field :email %>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "もう一度" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "登録", class: "btn-large btn-primary" %>
    <% end %>
  </div>
</div>